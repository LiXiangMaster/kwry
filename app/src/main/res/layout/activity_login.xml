<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/login_bg"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm180"
        android:src="@drawable/login_iv"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm120"
        >

        <ImageView
            android:id="@+id/iv_login_input_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm100"
            android:src="@drawable/login_phone"
            />

        <EditText
            android:maxLength="11"
            android:id="@+id/et_input_phone_num"
            android:layout_width="@dimen/dm350"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dm050"
            android:layout_toRightOf="@+id/iv_login_input_phonenum"
            android:background="@null"
            android:digits="0123456789"
            android:hint="@string/input_phone_num"
            android:inputType="phone"
            android:textColorHint="@color/comm_white"
            android:textColor="@color/comm_white"
            android:textSize="@dimen/dm032"
            />
    </RelativeLayout>

    <View
        android:layout_width="@dimen/dm460"
        android:layout_height="@dimen/dm002"
        android:layout_gravity="center_horizontal"
        android:background="@color/comm_white"></View>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm020"
        >

        <ImageView
            android:id="@+id/iv_login_input_phonepwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm100"
            android:src="@drawable/lock"
            />

        <EditText
            android:textColorHint="@color/comm_white"
            android:id="@+id/et_login_pwd"
            android:layout_width="@dimen/dm350"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="@dimen/dm050"
            android:layout_toRightOf="@+id/iv_login_input_phonepwd"
            android:background="@null"
            android:hint="@string/input_phone_pwd"
            android:inputType="textPassword"
            android:textColor="@color/comm_white"
            android:textSize="@dimen/dm032"
            />

        <CheckBox
            android:id="@+id/cb_login_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dm090"
            android:button="@drawable/selector_password"
            android:checked="false"/>

    </RelativeLayout>

    <View
        android:layout_width="@dimen/dm460"
        android:layout_height="@dimen/dm002"
        android:layout_gravity="center_horizontal"
        android:background="@color/comm_white"></View>


    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm090"
        android:background="@drawable/bt_login_bg_selector"
        android:text="@string/tv_login"
        android:textColor="@color/bt_login_text"
        android:textSize="@dimen/dm034"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm035"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <CheckBox
            android:checked="true"
            android:id="@+id/cb_deal_agree"
            android:layout_width="@dimen/dm030"
            android:layout_height="@dimen/dm030"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm005"
            android:background="@drawable/cb_deal_bg_selector"
            android:button="@null"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm010"
            android:text="我已阅读并同意"
            android:textSize="@dimen/dm028"
            />

        <TextView
            android:id="@+id/tv_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务条款"
            android:textSize="@dimen/dm028"
            android:textColor="#024c91"
            />
    </LinearLayout>

</LinearLayout>