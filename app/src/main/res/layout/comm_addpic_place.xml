<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/dm200"
                android:layout_height="@dimen/dm200"
                android:layout_marginLeft="@dimen/dm020"
                android:background="@color/camrea_bg"
                android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="@dimen/dm050"
            android:layout_height="@dimen/dm050"
            android:src="@drawable/camera"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm010"
            android:text="@string/add_photos"
            android:textColor="@color/camrea_text"
            />
    </LinearLayout>
</RelativeLayout>