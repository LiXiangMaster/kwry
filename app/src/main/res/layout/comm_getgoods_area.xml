<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/comm_white"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical"
              android:padding="@dimen/dm020">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm005"
            android:orientation="vertical"
            >

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_getgoods_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张三丰"
                    android:textColor="@color/comm_black"
                    android:textSize="@dimen/dm030"
                    />

                <TextView
                    android:id="@+id/tv_getgoods_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm010"
                    android:text="13071275209"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_location_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm010"
                android:text="武汉市洪山区光谷大道未来之光7-1107"
                android:textColor="@color/me_title_one"
                android:textSize="@dimen/dm028"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/dm050"
            android:layout_height="@dimen/dm050"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dm010"
            android:src="@drawable/area_edit"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm010">

        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <CheckBox
                android:id="@+id/cb_area_manager"
                android:layout_width="@dimen/dm030"
                android:layout_height="@dimen/dm030"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm005"
                android:background="@drawable/cb_area_bg_selector"
                android:button="@null"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dm010"
                android:text="默认地址"
                android:textColor="@color/comm_title_bar"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_delete_address"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/tv_delete_adress_selector"
            android:text="删除地址"
            android:textColor="@color/comm_white"
            />
    </RelativeLayout>
</LinearLayout>
