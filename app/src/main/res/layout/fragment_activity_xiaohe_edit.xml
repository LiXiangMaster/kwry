            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="内容及形式（给予15%的费用支持）"
                android:textColor="@color/goods_area"
                android:textSize="@dimen/dm028"
                />
        </LinearLayout>

        <View
            style="@style/fine_short_line">
        </View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm020"
            android:text="@string/need_goods"
            android:textColor="@color/comm_title_bar"
            />

        <RelativeLayout
            android:layout_width="@dimen/dm550"
            android:layout_height="@dimen/dm250"
            android:layout_gravity="center_horizontal"
            android:background="@color/list_divider_bg">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dm010"
