<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm200"
        android:src="@drawable/nodata"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm010"
        android:text="@string/need_add_info"
        android:textColor="@color/init_repertory_text"
        />

    <TextView
        android:id="@+id/tv_perfect_repertory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dm010"
        android:background="@drawable/perfect_repertory_shape"
        android:paddingBottom="@dimen/dm010"
        android:paddingLeft="@dimen/dm020"
        android:paddingRight="@dimen/dm020"
        android:paddingTop="@dimen/dm010"
        android:text="@string/perfect_repertory"
        android:textColor="@color/comm_white"
        />
</LinearLayout>