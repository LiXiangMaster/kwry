<?xml version="1.0" encoding="utf-8"?>
<hwd.kuworuye.weight.MyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm000"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dm030"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gist"
                    android:textColor="@color/goods_area"
                    android:textSize="@dimen/dm028"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm010">

                    <TextView
                        android:id="@+id/tv_purport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/comm_title_bar"
                        android:textSize="@dimen/dm028"
                        />

                </RelativeLayout>
            </LinearLayout>

            <View
                style="@style/fine_short_line">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dm030"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/explain"
                    android:textColor="@color/goods_area"
                    android:textSize="@dimen/dm028"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm010">


                    <TextView
                        android:id="@+id/tv_explain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textColor="@color/comm_title_bar"
                        android:textSize="@dimen/dm028"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dm030"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost"
                    android:textColor="@color/goods_area"
                    android:textSize="@dimen/dm028"
                    />

                <TextView
                    android:id="@+id/tv_cost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm010"
                    android:textColor="@color/comm_title_bar"
                    android:textSize="@dimen/dm028"
                    />
            </LinearLayout>

            <View
                style="@style/fine_short_line">
            </View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_approve_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dm010"
                android:layout_marginLeft="@dimen/dm020"
                android:layout_marginTop="@dimen/dm010"
                android:text="审批信息"
                android:textColor="@color/comm_black"
                android:textSize="@dimen/dm028"/>

            <View
                style="@style/fine_line"></View>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <hwd.kuworuye.weight.MyListView
                    android:id="@+id/myl_apply"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></hwd.kuworuye.weight.MyListView>
            </FrameLayout>


            <LinearLayout
                android:id="@+id/ll_refuse_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/dm030"
                android:visibility="gone"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拒绝理由："
                    android:textSize="@dimen/dm028"
                    />

                <TextView
                    android:id="@+id/tv_refuse_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/dm028"
                    />

            </LinearLayout>

            <View
                style="@style/fine_line"></View>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_other_ticket_look"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_join_site_look"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm020"
                android:background="@color/comm_white"
                android:padding="@dimen/dm020">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="其他费用核销票据查看"
                    android:textColor="@color/comm_black"
                    android:textSize="@dimen/dm028"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dm020"
                    android:src="@drawable/next"
                    />
            </RelativeLayout>

            <View
                style="@style/fine_line">
            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm236"
                android:background="@color/comm_white"
                android:padding="@dimen/dm010">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm236"
                    android:background="@color/comm_white"
                    android:padding="@dimen/dm010">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/rl_ticket_place"
                            layout="@layout/comm_addpic_place"></include>

                        <hwd.kuworuye.weight.MyGridView
                            android:id="@+id/mgv_join_site_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:horizontalSpacing="@dimen/dm010"
                            android:numColumns="3">

                        </hwd.kuworuye.weight.MyGridView>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt_sale_hexiao_submit"
                style="@style/Button"
                android:layout_marginBottom="@dimen/dm020"
                android:layout_marginTop="@dimen/dm050"
                android:text="@string/submit"
                android:visibility="gone"
                />

            <LinearLayout
                android:id="@+id/ll_refuse_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/dm010"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:visibility="gone"
                >

                <Button
                    android:id="@+id/bt_refuse"
                    style="@style/Small_Red_Button"
                    android:text="@string/turn_down"
                    />

                <Button
                    android:id="@+id/bt_pass"
                    style="@style/Small_Blue_Button"
                    android:text="@string/pass"
                    />
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>
</hwd.kuworuye.weight.MyScrollView>
