<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dm020"
        >

        <ImageView
            android:id="@+id/iv_ask_goods_detail"
            android:layout_width="@dimen/dm150"
            android:layout_height="@dimen/dm150"
            android:scaleType="fitXY"
            android:src="@drawable/temp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/dm010"
            >

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_height="@dimen/dm000"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_comm_drink_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奶嘴型"
                    android:textSize="@dimen/dm030"
                    />

                <TextView
                    android:id="@+id/tv_comm_drink_smell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm040"
                    android:text="草莓味"
                    android:textSize="@dimen/dm030"
                    />
            </LinearLayout>

            <TextView
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_height="@dimen/dm000"
                android:id="@+id/tv_comm_drink_norms"
                android:layout_width="wrap_content"
                android:text="规格：100MLX12"
                android:textColor="@color/goods_area"
                />

            <TextView
                android:id="@+id/tv_item_box"
                android:layout_weight="1"
                android:layout_height="@dimen/dm000"
                android:layout_width="wrap_content"
                android:text="100箱"
                android:textColor="@color/goods_num"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>