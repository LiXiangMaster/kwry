<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dm050"
        >

        <TextView
            android:id="@+id/tv_invoicingType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dm020"
            android:background="@drawable/jxc_state_join_shape"
            android:gravity="center"
            android:text="@string/jxc_join"
            android:textColor="@color/comm_white"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/tv_total_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1000"
                    android:textColor="@color/comm_title_bar"
                    android:textSize="@dimen/dm030"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dm005"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/tv_invoicingDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/month_day"
                        android:textColor="@color/oder_send_time"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dm010"
                        android:src="@drawable/next"
                        />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/last_repertory"
                    android:textColor="@color/oder_send_time"
                    />

                <TextView
                    android:id="@+id/tv_surplusBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="哈哈"
                    android:textColor="@color/report_num"
                    android:textSize="@dimen/dm028"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>