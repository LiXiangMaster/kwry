<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_alignParentRight="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal">


    <ImageView
        android:id="@+id/iv_count_minus"
        android:layout_width="@dimen/dm050"
        android:layout_height="@dimen/dm050"
        android:clickable="false"
        android:enabled="false"
        android:focusable="false"
        android:src="@drawable/car_down"/>


    <EditText
        android:textColor="@color/comm_black"
        android:id="@+id/et_count"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="5"
        android:minWidth="50dp"
        android:text="0"
        android:textSize="18sp"/>

    <ImageView
        android:id="@+id/iv_count_add"
        android:layout_width="@dimen/dm050"
        android:layout_height="@dimen/dm050"
        android:clickable="false"
        android:focusable="false"
        android:src="@drawable/car_add"/>


</LinearLayout>

